<h1>
  <%= @property.title %>
</h1>
<h2><%= @property.description %></h2>

  
  <h3><%= "Quartos: #{@property.rooms}" %></h3>

  <h3><%= "Banheiros: #{@property.bathrooms}" %></h3>
  
  <% if @property.pets? %>
    <h3><%= "Aceita Pets: Sim" %></h3>
  <% else %>
    <h3><%= "Aceita Pets: Não" %></h3>
  <% end %>

  <% if @property.parking_slot? %>
    <h3><%= "Estacionamento: Sim" %></h3>
  <% else %>
    <h3><%= "Estacionamento: Não" %></h3>
  <% end %>

  
  <h3><%= "Diária: #{number_to_currency(@property.daily_rate, unit: 'R$', separator: ',', format: "%u %n")}" %></h3>

<%= link_to('Voltar', root_path) %>