<% if @property.errors.any? %>
  <ul>
    <% @property.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @property do |f| %>
  <div>
    <%= f.label :property_type_id %>
    <%= f.collection_select :property_type_id, @property_types, :id, :name %>
  </div>
  <div>
    <%= f.label :property_location_id %>
    <%= f.collection_select :property_location_id, @property_locations, :id, :name %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :rooms %>
    <%= f.number_field :rooms %>
  </div>
  <div>
    <%= f.label :bathrooms %>
    <%= f.number_field :bathrooms %>
  </div>
  <div>
    <%= f.label :daily_rate %>
    <%= f.number_field :daily_rate %>
  </div>
  <div>
    <%= f.label :pets %>
    <%= f.check_box :pets %>
  </div>
  <div>
    <%= f.label :parking_slot %>
    <%= f.check_box :parking_slot %>
  </div>
    <%= f.submit %>
  
<% end %>